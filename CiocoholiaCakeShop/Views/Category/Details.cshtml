@model CakeShop.Models.Cake
@{
    ViewData["Title"] = "Details";
}
<h2>@Model.Name</h2>
<br />
<div class="row">
    <div class="col-md-6">
        <img class="img-thumbnail" src="@Model.ImageUrl" alt="@Model.Name" />
        <p></p>
    </div>
    <div class="col-md-6">
        <h4>@Model.Name</h4>
        <p><i>@Model.Price.ToString()</i></p>
        <p>@Model.Description</p>
        <form asp-action="AddToShoppingCart"
              asp-controller="ShoppingCart"
              asp-route-cakeId="@Model.Id"
              method="post">

            <button class="btn btn-primary buy-now-btn">Adaugă în coș</button>
        </form>

    </div>
</div>
