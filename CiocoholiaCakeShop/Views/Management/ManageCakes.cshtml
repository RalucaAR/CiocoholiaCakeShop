@model IEnumerable<CakeShop.Models.Cake>
@{
    ViewData["Title"] = "Administrează produse";
}
<h2>Administrează produse</h2>
<br />
<div>
    <a asp-action="AddCake" class="btn buy-now-btn">Adaugă un tort nou</a>
</div>
<br />
<table class="table ">
    <thead>
        <tr>
            <th>Nume produs</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cake in Model)
        {
            <tr id="cake-@cake.Id">
                <td>@cake.Name</td>
                <td>
                    <a class="btn btn-link btn-no-effect" asp-controller="Management" asp-action="EditCake" asp-route-id="@cake.Id">Editează </a>
                    |
                    <a class="btn btn-link" asp-controller="Management" asp-action="DeleteCake" asp-route-id="@cake.Id">Șterge</a>
                </td>
            </tr>
        }
    </tbody>
</table>