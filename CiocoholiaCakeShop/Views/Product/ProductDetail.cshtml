@model CakeShop.Models.Cake
@{
    ViewData["Title"] = "Details";
}
<h2>@Model.Name</h2>
<br />
<div class="row">
    <div class="col-md-6">
        <img class="img-thumbnail" src="@Model.ImageUrl" alt="@Model.Name" />
        <p></p>
    </div>
    <div class="col-md-6">
        <h4>@Model.Name</h4>
        <p><i>@Model.Price lei</i></p>
        <p>@Model.Description</p>
        <form  asp-controller="ShoppingCart" 
              asp-action="AddToCart"
              asp-route-id="@Model.Id"
              method="post">

            <button class="btn btn-primary buy-now-btn">Add to cart</button>
        </form>

    </div>
</div>
